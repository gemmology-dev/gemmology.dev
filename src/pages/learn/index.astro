---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Card, CardTitle, CardDescription } from '../../components/ui/Card';
import { IconBox } from '../../components/ui/IconBox';
import { Container } from '../../components/ui/Container';
import { DifficultyBadge } from '../../components/ui/DifficultyBadge';

// Get all learn entries and sort by order
const learnEntries = await getCollection('learn');
const topics = learnEntries
  .sort((a, b) => a.data.order - b.data.order)
  .map(entry => ({
    title: entry.data.title,
    description: entry.data.description,
    href: `/learn/${entry.id}`,
    icon: entry.data.icon || 'cube',
    category: entry.data.category,
    subcategory: entry.data.subcategory,
    difficulty: entry.data.difficulty as 'beginner' | 'intermediate' | 'advanced' | undefined,
  }));

// Category styles using existing IconBox variants - mapped to 8 categories
type IconBoxVariant = 'emerald' | 'sapphire' | 'amethyst' | 'ruby' | 'topaz' | 'crystal';
const categoryStyleMap: Record<string, { variant: IconBoxVariant; icon: string }> = {
  fundamentals: { variant: 'emerald', icon: 'cube' },
  equipment: { variant: 'sapphire', icon: 'microscope' },
  species: { variant: 'ruby', icon: 'gem' },
  identification: { variant: 'amethyst', icon: 'search' },
  phenomena: { variant: 'topaz', icon: 'sparkles' },
  origin: { variant: 'crystal', icon: 'map' },
  market: { variant: 'emerald', icon: 'scale' },
  care: { variant: 'sapphire', icon: 'shield' },
};
const defaultStyle: { variant: IconBoxVariant; icon: string } = { variant: 'crystal', icon: 'cube' };

// Helper to format category name for display
function formatCategoryName(category: string): string {
  return category
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Helper to generate category description based on topics
function generateCategoryDescription(categoryTopics: typeof topics): string {
  const keywords = categoryTopics.slice(0, 3).map(t => t.title.toLowerCase());
  if (keywords.length === 0) return '';
  if (keywords.length === 1) return `Learn about ${keywords[0]}`;
  const last = keywords.pop();
  return `Covering ${keywords.join(', ')}, and ${last}`;
}

// Automatically discover categories from the content and group topics
const categorySet = new Set(topics.map(t => t.category).filter(Boolean));
const categoryOrder = ['fundamentals', 'equipment', 'species', 'identification', 'phenomena', 'origin', 'market', 'care'];
const sortedCategories = [...categorySet].sort((a, b) => {
  const aIndex = categoryOrder.indexOf(a);
  const bIndex = categoryOrder.indexOf(b);
  if (aIndex !== -1 && bIndex !== -1) return aIndex - bIndex;
  if (aIndex !== -1) return -1;
  if (bIndex !== -1) return 1;
  return a.localeCompare(b);
});

// Difficulty sort order
const difficultyOrder = ['beginner', 'intermediate', 'advanced'];

// Type for subcategory groups
interface SubcategoryGroup {
  key: string;
  title: string;
  topics: typeof topics;
}

// Type for category groups
interface CategoryGroup {
  key: string;
  title: string;
  description: string;
  variant: IconBoxVariant;
  icon: string;
  directTopics: typeof topics;          // Topics without subcategory
  subcategories: SubcategoryGroup[];    // Grouped subcategory topics
}

const groupedTopics: CategoryGroup[] = sortedCategories.map((category) => {
  const style = categoryStyleMap[category] || defaultStyle;
  const categoryTopics = topics.filter(t => t.category === category);

  // Separate direct topics from subcategory topics
  const directTopics = categoryTopics
    .filter(t => !t.subcategory)
    .sort((a, b) => {
      const aIndex = difficultyOrder.indexOf(a.difficulty || 'intermediate');
      const bIndex = difficultyOrder.indexOf(b.difficulty || 'intermediate');
      return aIndex - bIndex;
    });

  // Group subcategory topics
  const subcategorySet = new Set(
    categoryTopics.filter(t => t.subcategory).map(t => t.subcategory!)
  );
  const subcategories: SubcategoryGroup[] = [...subcategorySet].map(subcategory => {
    const subcatTopics = categoryTopics
      .filter(t => t.subcategory === subcategory)
      .sort((a, b) => {
        // Sort by order within subcategory
        const orderDiff = (learnEntries.find(e => e.id === a.href.replace('/learn/', ''))?.data.order ?? 0) -
                          (learnEntries.find(e => e.id === b.href.replace('/learn/', ''))?.data.order ?? 0);
        if (orderDiff !== 0) return orderDiff;
        const aIndex = difficultyOrder.indexOf(a.difficulty || 'intermediate');
        const bIndex = difficultyOrder.indexOf(b.difficulty || 'intermediate');
        return aIndex - bIndex;
      });
    return {
      key: subcategory,
      title: formatCategoryName(subcategory),
      topics: subcatTopics,
    };
  });

  return {
    key: category,
    title: formatCategoryName(category),
    description: generateCategoryDescription(categoryTopics),
    variant: style.variant,
    icon: style.icon,
    directTopics,
    subcategories,
  };
}).filter(group => group.directTopics.length > 0 || group.subcategories.length > 0);

// Icon SVG paths (shared with topic cards)
const iconPaths: Record<string, string> = {
