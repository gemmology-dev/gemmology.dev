  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  document: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
  microscope: 'M9 3h6m-6 0v6m6-6v6m-3 0v3m0 0a6 6 0 100 12 6 6 0 000-12zm0 0V9m-3 12h6',
  map: 'M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7',
  book: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
};
---

<BaseLayout
  title="Learn"
  description="FGA curriculum-aligned content on crystallography and gemmology."
>
  <div class="bg-gradient-to-b from-crystal-50 to-white min-h-screen">
    <Container size="xl" padding="md">
      <!-- Header -->
      <div class="max-w-3xl pb-8 border-b border-slate-200">
        <h1 class="text-4xl font-bold text-slate-900">Learn Gemmology</h1>
        <p class="mt-4 text-lg text-slate-600">
          FGA curriculum-aligned content covering crystallography, physical and optical properties,
          inclusions, treatments, and synthetics.
        </p>
      </div>

      {groupedTopics.length > 0 ? (
        <div class="mt-12 space-y-16">
          {groupedTopics.map((group, groupIndex) => (
            <section
              class="relative animate-fade-in"
              style={`animation-delay: ${groupIndex * 100}ms`}
            >
              <!-- Category Header -->
              <div class="flex items-center gap-4 mb-8">
                <IconBox variant={group.variant} size="md" className="shrink-0">
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[group.icon]} />
                  </svg>
                </IconBox>
                <div class="flex-1">
                  <h2 class="text-2xl font-bold text-slate-900">{group.title}</h2>
                  <p class="text-sm text-slate-500">{group.description}</p>
                </div>
              </div>

              <!-- Direct Topics Grid -->
              {group.directTopics.length > 0 && (
                <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
                  {group.directTopics.map((topic, topicIndex) => (
                    <a
                      href={topic.href}
                      class="group animate-slide-up"
                      style={`animation-delay: ${groupIndex * 100 + topicIndex * 50}ms`}
                    >
                      <Card hover padding="md" className="h-full">
                        <div class="flex items-start gap-3">
                          <IconBox variant={group.variant} size="sm" className="shrink-0 group-hover:scale-105 transition-transform">
                            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[topic.icon] || iconPaths.cube} />
                            </svg>
                          </IconBox>
                          <div class="flex-1 min-w-0">
                            <CardTitle className="text-base leading-tight group-hover:text-crystal-600 transition-colors">
                              {topic.title}
                            </CardTitle>
                            <CardDescription className="mt-1.5 line-clamp-2">
                              {topic.description}
                            </CardDescription>
                            {topic.difficulty && (
                              <DifficultyBadge level={topic.difficulty} className="mt-2" />
                            )}
                          </div>
                        </div>
                      </Card>
                    </a>
                  ))}
                </div>
              )}

              <!-- Subcategory Groups -->
              {group.subcategories.map((subcat, subcatIndex) => (
                <div class="mt-8 first:mt-0">
                  <!-- Subcategory Header -->
                  <div class="flex items-center gap-3 mb-4 ml-1">
                    <div class="w-1 h-6 rounded-full bg-gradient-to-b from-slate-300 to-slate-200"></div>
                    <h3 class="text-lg font-semibold text-slate-700">{subcat.title}</h3>
                    <span class="text-sm text-slate-400">({subcat.topics.length} topics)</span>
                  </div>

                  <!-- Subcategory Topics Grid -->
                  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5 pl-4 border-l-2 border-slate-100">
                    {subcat.topics.map((topic, topicIndex) => (
                      <a
                        href={topic.href}
                        class="group animate-slide-up"
                        style={`animation-delay: ${groupIndex * 100 + subcatIndex * 75 + topicIndex * 50}ms`}
                      >
                        <Card hover padding="md" className="h-full">
                          <div class="flex items-start gap-3">
                            <IconBox variant={group.variant} size="sm" className="shrink-0 group-hover:scale-105 transition-transform">
                              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[topic.icon] || iconPaths.cube} />
                              </svg>
                            </IconBox>
                            <div class="flex-1 min-w-0">
                              <CardTitle className="text-base leading-tight group-hover:text-crystal-600 transition-colors">
                                {topic.title}
                              </CardTitle>
                              <CardDescription className="mt-1.5 line-clamp-2">
                                {topic.description}
                              </CardDescription>
                              {topic.difficulty && (
                                <DifficultyBadge level={topic.difficulty} className="mt-2" />
                              )}
                            </div>
                          </div>
                        </Card>
                      </a>
                    ))}
                  </div>
                </div>
              ))}
            </section>
          ))}
        </div>
      ) : (
        <Card padding="lg" className="mt-12 text-center">
          <svg class="w-12 h-12 text-slate-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <CardTitle>Content Coming Soon</CardTitle>
          <CardDescription className="mt-2">
            Learn content is being migrated. Run <code class="px-2 py-1 bg-slate-100 rounded text-sm">npm run sync</code> to pull the latest content.
          </CardDescription>
        </Card>
      )}

      <!-- FGA Notice -->
      <Card padding="lg" className="mt-16 bg-slate-900 text-white border-slate-800">
        <div class="flex items-start gap-4">
          <IconBox variant="crystal" size="md" className="shrink-0 !bg-crystal-900/50 !text-crystal-400">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </IconBox>
          <div>
            <h3 class="text-lg font-semibold">FGA Curriculum Alignment</h3>
            <p class="mt-2 text-slate-300">
              This content is aligned with the <a href="https://gem-a.com" target="_blank" rel="noopener noreferrer" class="text-crystal-400 hover:text-crystal-300">Gem-A</a> (Gemmological Association of Great Britain)
              FGA diploma curriculum. While comprehensive, this resource is not a substitute for formal
              gemmological education and hands-on training with reference stones.
            </p>
          </div>
        </div>
      </Card>
    </Container>
  </div>
</BaseLayout>
