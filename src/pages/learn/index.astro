---
import BaseLayout from '../../layouts/BaseLayout.astro';

const topics = [
  {
    title: 'Crystal Systems',
    description: 'The seven crystal systems and their characteristic symmetry elements.',
    href: '/learn/crystal-systems',
    icon: 'cube',
  },
  {
    title: 'Physical Properties',
    description: 'Hardness, specific gravity, cleavage, fracture, and lustre.',
    href: '/learn/physical-properties',
    icon: 'scale',
  },
  {
    title: 'Optical Properties',
    description: 'Refractive index, birefringence, pleochroism, and dispersion.',
    href: '/learn/optical-properties',
    icon: 'eye',
  },
  {
    title: 'Inclusions',
    description: 'Diagnostic inclusions and fingerprinting for gem identification.',
    href: '/learn/inclusions',
    icon: 'search',
  },
  {
    title: 'Treatments',
    description: 'Heat treatment, filling, coating, and treatment detection.',
    href: '/learn/treatments',
    icon: 'fire',
  },
  {
    title: 'Synthetics',
    description: 'Flame fusion, hydrothermal, flux growth, and synthetic detection.',
    href: '/learn/synthetics',
    icon: 'beaker',
  },
];
---

<BaseLayout
  title="Learn"
  description="FGA curriculum-aligned content on crystallography and gemmology."
>
  <div class="bg-gradient-to-b from-crystal-50 to-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-12">
      <div class="max-w-3xl">
        <h1 class="text-4xl font-bold text-slate-900">Learn Gemmology</h1>
        <p class="mt-4 text-lg text-slate-600">
          FGA curriculum-aligned content covering crystallography, physical and optical properties,
          inclusions, treatments, and synthetics.
        </p>
      </div>

      <div class="mt-12 grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {topics.map((topic) => (
          <a href={topic.href} class="group">
            <div class="h-full p-6 rounded-xl border border-slate-200 bg-white hover:border-crystal-300 hover:shadow-lg transition-all">
              <div class="w-12 h-12 rounded-lg bg-crystal-100 flex items-center justify-center mb-4 group-hover:bg-crystal-200 transition-colors">
                {topic.icon === 'cube' && (
                  <svg class="w-6 h-6 text-crystal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                  </svg>
                )}
                {topic.icon === 'scale' && (
                  <svg class="w-6 h-6 text-crystal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                  </svg>
                )}
                {topic.icon === 'eye' && (
                  <svg class="w-6 h-6 text-crystal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                )}
                {topic.icon === 'search' && (
                  <svg class="w-6 h-6 text-crystal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                )}
                {topic.icon === 'fire' && (
                  <svg class="w-6 h-6 text-crystal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z" />
                  </svg>
                )}
                {topic.icon === 'beaker' && (
                  <svg class="w-6 h-6 text-crystal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
                  </svg>
                )}
              </div>
              <h3 class="text-lg font-semibold text-slate-900 group-hover:text-crystal-600 transition-colors">
                {topic.title}
              </h3>
              <p class="mt-2 text-sm text-slate-600">{topic.description}</p>
            </div>
          </a>
        ))}
      </div>

      <!-- FGA Notice -->
      <div class="mt-16 p-8 rounded-2xl bg-slate-900 text-white">
        <div class="flex items-start gap-4">
          <div class="shrink-0">
            <svg class="w-8 h-8 text-crystal-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold">FGA Curriculum Alignment</h3>
            <p class="mt-2 text-slate-300">
              This content is aligned with the <a href="https://gem-a.com" target="_blank" rel="noopener noreferrer" class="text-crystal-400 hover:text-crystal-300">Gem-A</a> (Gemmological Association of Great Britain)
              FGA diploma curriculum. While comprehensive, this resource is not a substitute for formal
              gemmological education and hands-on training with reference stones.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
