---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Card, CardTitle, CardDescription } from '../../components/ui/Card';
import { IconBox } from '../../components/ui/IconBox';
import { Container } from '../../components/ui/Container';
import { DifficultyBadge } from '../../components/ui/DifficultyBadge';

// Get all learn entries and sort by order
const learnEntries = await getCollection('learn');
const topics = learnEntries
  .sort((a, b) => a.data.order - b.data.order)
  .map(entry => ({
    title: entry.data.title,
    description: entry.data.description,
    href: `/learn/${entry.id}`,
    icon: entry.data.icon || 'cube',
    category: entry.data.category,
    difficulty: entry.data.difficulty as 'beginner' | 'intermediate' | 'advanced' | undefined,
  }));

// Category styles using existing IconBox variants
type IconBoxVariant = 'emerald' | 'sapphire' | 'amethyst' | 'ruby' | 'topaz';
const categoryStyles: { variant: IconBoxVariant; icon: string }[] = [
  { variant: 'emerald', icon: 'cube' },
  { variant: 'sapphire', icon: 'search' },
  { variant: 'amethyst', icon: 'sparkles' },
  { variant: 'ruby', icon: 'gem' },
  { variant: 'topaz', icon: 'star' },
];

// Helper to format category name for display
function formatCategoryName(category: string): string {
  return category
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
}

// Helper to generate category description based on topics
function generateCategoryDescription(categoryTopics: typeof topics): string {
  const keywords = categoryTopics.slice(0, 3).map(t => t.title.toLowerCase());
  if (keywords.length === 0) return '';
  if (keywords.length === 1) return `Learn about ${keywords[0]}`;
  const last = keywords.pop();
  return `Covering ${keywords.join(', ')}, and ${last}`;
}

// Automatically discover categories from the content and group topics
const categorySet = new Set(topics.map(t => t.category).filter(Boolean));
const categoryOrder = ['fundamentals', 'identification', 'advanced']; // Preferred order
const sortedCategories = [...categorySet].sort((a, b) => {
  const aIndex = categoryOrder.indexOf(a);
  const bIndex = categoryOrder.indexOf(b);
  if (aIndex !== -1 && bIndex !== -1) return aIndex - bIndex;
  if (aIndex !== -1) return -1;
  if (bIndex !== -1) return 1;
  return a.localeCompare(b);
});

// Difficulty sort order
const difficultyOrder = ['beginner', 'intermediate', 'advanced'];

const groupedTopics = sortedCategories.map((category, index) => {
  const style = categoryStyles[index % categoryStyles.length];
  const categoryTopics = topics
    .filter(t => t.category === category)
    .sort((a, b) => {
      const aIndex = difficultyOrder.indexOf(a.difficulty || 'intermediate');
      const bIndex = difficultyOrder.indexOf(b.difficulty || 'intermediate');
      return aIndex - bIndex;
    });
  return {
    key: category,
    title: formatCategoryName(category),
    description: generateCategoryDescription(categoryTopics),
    variant: style.variant,
    icon: style.icon,
    topics: categoryTopics,
  };
}).filter(group => group.topics.length > 0);

// Icon SVG paths (shared with topic cards)
const iconPaths: Record<string, string> = {
  cube: 'M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4',
  scale: 'M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3',
  eye: 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z',
  search: 'M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z',
  fire: 'M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z',
  beaker: 'M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z',
  sparkles: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z',
  gem: 'M12 3L4 9l8 12 8-12-8-6z M4 9h16',
  star: 'M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z',
  shield: 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z',
  document: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
};
---

<BaseLayout
  title="Learn"
  description="FGA curriculum-aligned content on crystallography and gemmology."
>
  <div class="bg-gradient-to-b from-crystal-50 to-white min-h-screen">
    <Container size="xl" padding="md">
      <!-- Header -->
      <div class="max-w-3xl pb-8 border-b border-slate-200">
        <h1 class="text-4xl font-bold text-slate-900">Learn Gemmology</h1>
        <p class="mt-4 text-lg text-slate-600">
          FGA curriculum-aligned content covering crystallography, physical and optical properties,
          inclusions, treatments, and synthetics.
        </p>
      </div>

      {groupedTopics.length > 0 ? (
        <div class="mt-12 space-y-16">
          {groupedTopics.map((group, groupIndex) => (
            <section
              class="relative animate-fade-in"
              style={`animation-delay: ${groupIndex * 100}ms`}
            >
              <!-- Category Header -->
              <div class="flex items-center gap-4 mb-8">
                <IconBox variant={group.variant} size="md" className="shrink-0">
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[group.icon]} />
                  </svg>
                </IconBox>
                <div class="flex-1">
                  <h2 class="text-2xl font-bold text-slate-900">{group.title}</h2>
                  <p class="text-sm text-slate-500">{group.description}</p>
                </div>
              </div>

              <!-- Topics Grid -->
              <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-5">
                {group.topics.map((topic, topicIndex) => (
                  <a
                    href={topic.href}
                    class="group animate-slide-up"
                    style={`animation-delay: ${groupIndex * 100 + topicIndex * 50}ms`}
                  >
                    <Card hover padding="md" className="h-full">
                      <div class="flex items-start gap-3">
                        <IconBox variant={group.variant} size="sm" className="shrink-0 group-hover:scale-105 transition-transform">
                          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[topic.icon] || iconPaths.cube} />
                          </svg>
                        </IconBox>
                        <div class="flex-1 min-w-0">
                          <CardTitle className="text-base leading-tight group-hover:text-crystal-600 transition-colors">
                            {topic.title}
                          </CardTitle>
                          <CardDescription className="mt-1.5 line-clamp-2">
                            {topic.description}
                          </CardDescription>
                          {topic.difficulty && (
                            <DifficultyBadge level={topic.difficulty} className="mt-2" />
                          )}
                        </div>
                      </div>
                    </Card>
                  </a>
                ))}
              </div>
            </section>
          ))}
        </div>
      ) : (
        <Card padding="lg" className="mt-12 text-center">
          <svg class="w-12 h-12 text-slate-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
          </svg>
          <CardTitle>Content Coming Soon</CardTitle>
          <CardDescription className="mt-2">
            Learn content is being migrated. Run <code class="px-2 py-1 bg-slate-100 rounded text-sm">npm run sync</code> to pull the latest content.
          </CardDescription>
        </Card>
      )}

      <!-- FGA Notice -->
      <Card padding="lg" className="mt-16 bg-slate-900 text-white border-slate-800">
        <div class="flex items-start gap-4">
          <IconBox variant="crystal" size="md" className="shrink-0 !bg-crystal-900/50 !text-crystal-400">
            <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </IconBox>
          <div>
            <h3 class="text-lg font-semibold">FGA Curriculum Alignment</h3>
            <p class="mt-2 text-slate-300">
              This content is aligned with the <a href="https://gem-a.com" target="_blank" rel="noopener noreferrer" class="text-crystal-400 hover:text-crystal-300">Gem-A</a> (Gemmological Association of Great Britain)
              FGA diploma curriculum. While comprehensive, this resource is not a substitute for formal
              gemmological education and hands-on training with reference stones.
            </p>
          </div>
        </div>
      </Card>
    </Container>
  </div>
</BaseLayout>
