---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Card } from '../components/ui/Card';
import { Button } from '../components/ui/Button';
import { Badge } from '../components/ui/Badge';
import { IconBox } from '../components/ui/IconBox';
import { SectionHeader } from '../components/ui/SectionHeader';
import Container from '../components/ui-astro/Container.astro';
import { Link } from '../components/ui/Link';
import { HeroCrystal3D } from '../components/crystal/HeroCrystal3D';

// JSON-LD schemas for homepage
const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "gemmology.dev",
  "description": "Crystal structure visualization and gemmological reference for FGA students and professionals.",
  "url": "https://gemmology.dev",
  "potentialAction": {
    "@type": "SearchAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://gemmology.dev/gallery?search={search_term_string}"
    },
    "query-input": "required name=search_term_string"
  }
};

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "gemmology.dev",
  "url": "https://gemmology.dev",
  "logo": "https://gemmology.dev/favicon.svg",
  "sameAs": [
    "https://github.com/gemmology-dev"
  ]
};

const features = [
  {
    title: 'Crystal Gallery',
    description: 'Explore 50+ mineral presets with FGA-accurate crystallographic data and interactive visualizations.',
    href: '/gallery',
    icon: 'gallery',
    variant: 'crystal' as const,
  },
  {
    title: 'CDL Playground',
    description: 'Write Crystal Description Language code with live preview, syntax highlighting, and multi-format export.',
    href: '/playground',
    icon: 'code',
    variant: 'sapphire' as const,
  },
  {
    title: 'Documentation',
    description: 'Complete API reference, CLI documentation, and CDL specification for developers.',
    href: '/docs',
    icon: 'docs',
    variant: 'emerald' as const,
  },
  {
    title: 'Learn',
    description: 'FGA curriculum-aligned content covering crystal systems, optical properties, and identification.',
    href: '/learn',
    icon: 'learn',
    variant: 'amethyst' as const,
  },
];

const crystalSystems = [
  { name: 'Cubic', examples: 'Diamond, Garnet, Spinel' },
  { name: 'Hexagonal', examples: 'Beryl, Apatite' },
  { name: 'Trigonal', examples: 'Quartz, Tourmaline, Corundum' },
  { name: 'Tetragonal', examples: 'Zircon, Rutile' },
  { name: 'Orthorhombic', examples: 'Topaz, Peridot, Tanzanite' },
  { name: 'Monoclinic', examples: 'Gypsum, Orthoclase' },
  { name: 'Triclinic', examples: 'Plagioclase, Kyanite' },
];

// Icon paths for feature cards
const iconPaths: Record<string, string> = {
  gallery: 'M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z',
  code: 'M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4',
  docs: 'M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z',
  learn: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
};
---

<BaseLayout title="Crystal Visualization">
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
  </Fragment>

  <!-- Hero Section -->
  <section class="relative overflow-hidden gradient-bg">
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-20 left-10 w-72 h-72 bg-crystal-200/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-blue-200/20 rounded-full blur-3xl"></div>
    </div>

    <Container size="xl" padding="lg" class="lg:py-32">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 tracking-tight">
            Crystal Structure
            <span class="gradient-text block">Visualization</span>
          </h1>
          <p class="mt-6 text-lg text-slate-600 max-w-xl">
            Professional-grade crystal morphology visualization for gemmologists.
            FGA-accurate crystallographic data with interactive 3D-style projections.
          </p>
          <div class="mt-8 flex flex-wrap gap-4">
            <Button variant="primary" size="lg">
              <a href="/playground" class="inline-flex items-center gap-2">
                Open Playground
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </Button>
            <Button variant="secondary" size="lg">
              <a href="/gallery">Browse Gallery</a>
            </Button>
          </div>
        </div>

        <!-- Hero Crystal SVG -->
        <div class="relative">
          <div class="aspect-square max-w-md mx-auto">
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-crystal-100/50 to-slate-100/50 -rotate-6"></div>
            <div class="relative rounded-2xl border border-slate-200/50 bg-white/80 backdrop-blur-sm shadow-xl overflow-hidden" style="aspect-ratio: 1;">
              <HeroCrystal3D client:load mineralName="Diamond" rotationSpeed={0.3} className="w-full h-full" />
            </div>
          </div>
          <div class="absolute -bottom-4 -right-4 bg-white rounded-lg shadow-lg border border-slate-200 px-4 py-2">
            <code class="text-sm font-mono text-slate-700">cubic[m3m]:{'{'}{'{'}111{'}'}</code>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Features Section -->
  <section class="py-24 bg-white">
    <Container size="xl" padding="none" class="px-4 sm:px-6 lg:px-8">
      <SectionHeader
        title="Everything you need for crystal visualization"
        description="A comprehensive toolkit for FGA students, gemmologists, and crystal enthusiasts."
        client:load
      />

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {features.map((feature) => (
          <a href={feature.href} class="group">
            <Card hover padding="md" className="h-full">
              <IconBox variant={feature.variant} className="mb-4 group-hover:scale-110">
                <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={iconPaths[feature.icon]} />
                </svg>
              </IconBox>
              <h3 class="text-lg font-semibold text-slate-900 group-hover:text-crystal-600 transition-colors">
                {feature.title}
              </h3>
              <p class="mt-2 text-sm text-slate-600">{feature.description}</p>
            </Card>
          </a>
        ))}
      </div>
    </Container>
  </section>

  <!-- CDL Example Section -->
  <section class="py-24 bg-slate-50">
    <Container size="xl" padding="none" class="px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <Badge variant="crystal" className="mb-4">Crystal Description Language</Badge>
          <h2 class="text-3xl font-bold text-slate-900 mt-2">Describe crystals with precision</h2>
          <p class="mt-4 text-lg text-slate-600">
            CDL is a domain-specific language for defining crystal morphology.
            Combine Miller indices, point groups, and modifications to create accurate crystal representations.
          </p>

          <div class="mt-8 bg-slate-900 rounded-xl p-6 shadow-lg">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>
            <pre class="text-sm font-mono"><code class="text-slate-300"><span class="text-cyan-400">cubic</span>[<span class="text-yellow-400">m3m</span>]:{'{'}<span class="text-green-400">111</span>{'}'}@<span class="text-orange-400">1.0</span> + {'{'}<span class="text-green-400">100</span>{'}'}@<span class="text-orange-400">1.3</span></code></pre>
            <p class="mt-3 text-sm text-slate-500">Truncated octahedron with cube faces</p>
          </div>

          <Link href="/playground" variant="primary" withArrow className="mt-6">
            Try it in the playground
          </Link>
        </div>

        <Card padding="lg" className="shadow-lg">
          <h3 class="font-semibold text-slate-900 mb-4">CDL Syntax Reference</h3>
          <div class="space-y-4 text-sm">
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">system</code>
              <span class="text-slate-600">Crystal system (cubic, hexagonal, trigonal, etc.)</span>
            </div>
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">[group]</code>
              <span class="text-slate-600">Point group symmetry (m3m, 6/mmm, etc.)</span>
            </div>
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">{'{'}hkl{'}'}</code>
              <span class="text-slate-600">Miller indices defining crystal forms</span>
            </div>
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">@dist</code>
              <span class="text-slate-600">Distance from origin (relative size)</span>
            </div>
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">+</code>
              <span class="text-slate-600">Combine multiple crystal forms</span>
            </div>
          </div>
        </Card>
      </div>
    </Container>
  </section>

  <!-- Crystal Systems Section -->
  <section class="py-24 bg-white">
    <Container size="xl" padding="none" class="px-4 sm:px-6 lg:px-8">
      <SectionHeader
        title="Seven Crystal Systems"
        description="Comprehensive coverage of all crystal systems with accurate symmetry operations."
        client:load
      />

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        {crystalSystems.map((system) => (
          <Card hover padding="sm" className="p-5 bg-slate-50 border-slate-100 hover:bg-crystal-50/50">
            <h3 class="font-semibold text-slate-900">{system.name}</h3>
            <p class="mt-1 text-sm text-slate-500">{system.examples}</p>
          </Card>
        ))}
      </div>
    </Container>
  </section>

  <!-- Quiz & Exam Section -->
  <section class="py-24 bg-gradient-to-b from-slate-50 via-white to-slate-50 relative overflow-hidden">
    <!-- Decorative background elements -->
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-0 left-1/4 w-64 h-64 bg-purple-100/40 rounded-full blur-3xl"></div>
      <div class="absolute bottom-0 right-1/4 w-72 h-72 bg-red-100/30 rounded-full blur-3xl"></div>
    </div>

    <Container size="xl" padding="none" class="px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <Badge variant="amethyst" className="mb-4">Interactive Learning</Badge>
        <h2 class="text-3xl font-bold text-slate-900 mt-2">Test Your Knowledge</h2>
        <p class="mt-4 text-lg text-slate-600 max-w-2xl mx-auto">
          756 questions across 8 categories, generated from FGA curriculum content.
          Practice at your own pace or challenge yourself with timed exams.
        </p>
      </div>

      <!-- Two-column mode cards -->
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        <!-- Practice Mode Card -->
        <a href="/quiz" class="group">
          <Card hover padding="none" className="h-full overflow-hidden">
            <div class="bg-gradient-to-br from-red-50 to-red-100/50 p-6 border-b border-red-100">
              <div class="flex items-center gap-3">
                <IconBox variant="ruby" size="lg" className="group-hover:scale-110">
                  <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                  </svg>
                </IconBox>
                <div>
                  <h3 class="text-xl font-semibold text-slate-900 group-hover:text-red-600 transition-colors">Practice Mode</h3>
                  <p class="text-sm text-slate-500">Learn as you go</p>
                </div>
              </div>
            </div>
            <div class="p-6">
              <ul class="space-y-3 text-sm text-slate-600">
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Immediate feedback after each question
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  Detailed explanations and references
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  "Learn more" links to study material
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-green-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                  No time pressure
                </li>
              </ul>
            </div>
          </Card>
        </a>

        <!-- Exam Mode Card -->
        <a href="/quiz" class="group">
          <Card hover padding="none" className="h-full overflow-hidden">
            <div class="bg-gradient-to-br from-purple-50 to-purple-100/50 p-6 border-b border-purple-100">
              <div class="flex items-center gap-3">
                <IconBox variant="amethyst" size="lg" className="group-hover:scale-110">
                  <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
                  </svg>
                </IconBox>
                <div>
                  <h3 class="text-xl font-semibold text-slate-900 group-hover:text-purple-600 transition-colors">Exam Mode</h3>
                  <p class="text-sm text-slate-500">FGA-style assessment</p>
                </div>
              </div>
            </div>
            <div class="p-6">
              <ul class="space-y-3 text-sm text-slate-600">
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-purple-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Timed sessions (30, 60, or 90 minutes)
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-purple-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 21v-4m0 0V5a2 2 0 012-2h6.5l1 1H21l-3 6 3 6h-8.5l-1-1H5a2 2 0 00-2 2zm9-13.5V9" />
                  </svg>
                  Flag questions for review
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-purple-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                  Results breakdown by category
                </li>
                <li class="flex items-center gap-2">
                  <svg class="w-5 h-5 text-purple-500 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                  </svg>
                  Full question review after submission
                </li>
              </ul>
            </div>
          </Card>
        </a>
      </div>

      <!-- Stats row -->
      <div class="mt-12 flex flex-wrap justify-center gap-8 md:gap-16">
        <div class="text-center">
          <div class="text-3xl font-bold text-slate-900">756</div>
          <div class="text-sm text-slate-500 mt-1">Questions</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-slate-900">8</div>
          <div class="text-sm text-slate-500 mt-1">Categories</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-slate-900">91</div>
          <div class="text-sm text-slate-500 mt-1">Source Topics</div>
        </div>
        <div class="text-center">
          <div class="flex items-center justify-center gap-1">
            <svg class="w-6 h-6 text-amber-500" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span class="text-3xl font-bold text-slate-900">FGA</span>
          </div>
          <div class="text-sm text-slate-500 mt-1">Curriculum Aligned</div>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-12 text-center">
        <Link href="/quiz" variant="primary" withArrow className="text-base">
          Start practicing now
        </Link>
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-to-br from-crystal-600 to-crystal-800">
    <Container size="xl" padding="none" class="px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white">Ready to visualize crystals?</h2>
      <p class="mt-4 text-lg text-crystal-100 max-w-2xl mx-auto">
        Start with the interactive playground or explore our gallery of 50+ mineral presets.
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a href="/playground" class="inline-flex items-center gap-2 px-6 py-3 bg-white text-crystal-700 font-medium rounded-lg hover:bg-crystal-50 transition-colors">
          Open Playground
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a href="https://github.com/gemmology-dev" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 bg-crystal-700 text-white font-medium rounded-lg hover:bg-crystal-600 transition-colors border border-crystal-500">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" clip-rule="evenodd"/>
          </svg>
          View on GitHub
        </a>
      </div>
    </Container>
  </section>
</BaseLayout>
