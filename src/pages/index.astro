---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Card, CardTitle, CardDescription } from '../components/ui/Card';

const features = [
  {
    title: 'Crystal Gallery',
    description: 'Explore 50+ mineral presets with FGA-accurate crystallographic data and interactive visualizations.',
    href: '/gallery',
    icon: 'gallery',
    color: 'crystal',
  },
  {
    title: 'CDL Playground',
    description: 'Write Crystal Description Language code with live preview, syntax highlighting, and multi-format export.',
    href: '/playground',
    icon: 'code',
    color: 'sapphire',
  },
  {
    title: 'Documentation',
    description: 'Complete API reference, CLI documentation, and CDL specification for developers.',
    href: '/docs',
    icon: 'docs',
    color: 'emerald',
  },
  {
    title: 'Learn',
    description: 'FGA curriculum-aligned content covering crystal systems, optical properties, and identification.',
    href: '/learn',
    icon: 'learn',
    color: 'amethyst',
  },
];

const crystalSystems = [
  { name: 'Cubic', examples: 'Diamond, Garnet, Spinel' },
  { name: 'Hexagonal', examples: 'Beryl, Apatite' },
  { name: 'Trigonal', examples: 'Quartz, Tourmaline, Corundum' },
  { name: 'Tetragonal', examples: 'Zircon, Rutile' },
  { name: 'Orthorhombic', examples: 'Topaz, Peridot, Tanzanite' },
  { name: 'Monoclinic', examples: 'Gypsum, Orthoclase' },
  { name: 'Triclinic', examples: 'Plagioclase, Kyanite' },
];
---

<BaseLayout title="Crystal Visualization">
  <!-- Hero Section -->
  <section class="relative overflow-hidden gradient-bg">
    <div class="absolute inset-0 -z-10">
      <div class="absolute top-20 left-10 w-72 h-72 bg-crystal-200/30 rounded-full blur-3xl"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-blue-200/20 rounded-full blur-3xl"></div>
    </div>

    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 py-24 lg:py-32">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 tracking-tight">
            Crystal Structure
            <span class="gradient-text block">Visualization</span>
          </h1>
          <p class="mt-6 text-lg text-slate-600 max-w-xl">
            Professional-grade crystal morphology visualization for gemmologists.
            FGA-accurate crystallographic data with interactive 3D-style projections.
          </p>
          <div class="mt-8 flex flex-wrap gap-4">
            <a href="/playground" class="btn-primary">
              Open Playground
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </a>
            <a href="/gallery" class="btn-secondary">
              Browse Gallery
            </a>
          </div>
        </div>

        <!-- Hero Crystal SVG -->
        <div class="relative">
          <div class="aspect-square max-w-md mx-auto">
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-crystal-100/50 to-slate-100/50 -rotate-6"></div>
            <div class="relative rounded-2xl border border-slate-200/50 bg-white/80 backdrop-blur-sm p-8 shadow-xl">
              <svg viewBox="-150 -150 300 300" class="w-full h-full animate-crystal-rotate" style="animation-duration: 30s;">
                <!-- Octahedron crystal -->
                <defs>
                  <linearGradient id="face1" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#0ea5e9;stop-opacity:0.8" />
                    <stop offset="100%" style="stop-color:#0284c7;stop-opacity:0.9" />
                  </linearGradient>
                  <linearGradient id="face2" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#38bdf8;stop-opacity:0.7" />
                    <stop offset="100%" style="stop-color:#0ea5e9;stop-opacity:0.8" />
                  </linearGradient>
                  <linearGradient id="face3" x1="0%" y1="0%" x2="100%" y2="100%">
                    <stop offset="0%" style="stop-color:#7dd3fc;stop-opacity:0.6" />
                    <stop offset="100%" style="stop-color:#38bdf8;stop-opacity:0.7" />
                  </linearGradient>
                </defs>
                <!-- Back faces -->
                <polygon points="0,-100 -80,0 0,100" fill="url(#face3)" stroke="#0369a1" stroke-width="1.5" opacity="0.5"/>
                <polygon points="0,-100 0,100 80,0" fill="url(#face2)" stroke="#0369a1" stroke-width="1.5" opacity="0.6"/>
                <!-- Front faces -->
                <polygon points="0,-100 -80,0 80,0" fill="url(#face1)" stroke="#0369a1" stroke-width="2"/>
                <polygon points="0,100 -80,0 80,0" fill="url(#face2)" stroke="#0369a1" stroke-width="2"/>
              </svg>
            </div>
          </div>
          <div class="absolute -bottom-4 -right-4 bg-white rounded-lg shadow-lg border border-slate-200 px-4 py-2">
            <code class="text-sm font-mono text-slate-700">cubic[m3m]:{'{'}{'{'}111{'}'}</code>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900">Everything you need for crystal visualization</h2>
        <p class="mt-4 text-lg text-slate-600 max-w-2xl mx-auto">
          A comprehensive toolkit for FGA students, gemmologists, and crystal enthusiasts.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {features.map((feature) => (
          <a href={feature.href} class="group">
            <div class="card-hover h-full">
              <div class={`w-12 h-12 rounded-lg bg-${feature.color === 'crystal' ? 'crystal' : feature.color === 'sapphire' ? 'blue' : feature.color === 'emerald' ? 'green' : 'purple'}-100 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform`}>
                {feature.icon === 'gallery' && (
                  <svg class="w-6 h-6 text-crystal-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                )}
                {feature.icon === 'code' && (
                  <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                  </svg>
                )}
                {feature.icon === 'docs' && (
                  <svg class="w-6 h-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                )}
                {feature.icon === 'learn' && (
                  <svg class="w-6 h-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                  </svg>
                )}
              </div>
              <h3 class="text-lg font-semibold text-slate-900 group-hover:text-crystal-600 transition-colors">{feature.title}</h3>
              <p class="mt-2 text-sm text-slate-600">{feature.description}</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CDL Example Section -->
  <section class="py-24 bg-slate-50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="badge-crystal mb-4">Crystal Description Language</span>
          <h2 class="text-3xl font-bold text-slate-900 mt-2">Describe crystals with precision</h2>
          <p class="mt-4 text-lg text-slate-600">
            CDL is a domain-specific language for defining crystal morphology.
            Combine Miller indices, point groups, and modifications to create accurate crystal representations.
          </p>

          <div class="mt-8 bg-slate-900 rounded-xl p-6 shadow-lg">
            <div class="flex items-center gap-2 mb-4">
              <div class="w-3 h-3 rounded-full bg-red-500"></div>
              <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
              <div class="w-3 h-3 rounded-full bg-green-500"></div>
            </div>
            <pre class="text-sm font-mono"><code class="text-slate-300"><span class="text-cyan-400">cubic</span>[<span class="text-yellow-400">m3m</span>]:{'{'}<span class="text-green-400">111</span>{'}'}@<span class="text-orange-400">1.0</span> + {'{'}<span class="text-green-400">100</span>{'}'}@<span class="text-orange-400">1.3</span></code></pre>
            <p class="mt-3 text-sm text-slate-500">Truncated octahedron with cube faces</p>
          </div>

          <a href="/playground" class="inline-flex items-center gap-2 mt-6 text-crystal-600 hover:text-crystal-700 font-medium">
            Try it in the playground
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>

        <div class="bg-white rounded-2xl border border-slate-200 p-8 shadow-lg">
          <h3 class="font-semibold text-slate-900 mb-4">CDL Syntax Reference</h3>
          <div class="space-y-4 text-sm">
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">system</code>
              <span class="text-slate-600">Crystal system (cubic, hexagonal, trigonal, etc.)</span>
            </div>
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">[group]</code>
              <span class="text-slate-600">Point group symmetry (m3m, 6/mmm, etc.)</span>
            </div>
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">{'{'}hkl{'}'}</code>
              <span class="text-slate-600">Miller indices defining crystal forms</span>
            </div>
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">@dist</code>
              <span class="text-slate-600">Distance from origin (relative size)</span>
            </div>
            <div class="flex items-start gap-3">
              <code class="bg-slate-100 px-2 py-1 rounded font-mono text-slate-700 shrink-0">+</code>
              <span class="text-slate-600">Combine multiple crystal forms</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Crystal Systems Section -->
  <section class="py-24 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-slate-900">Seven Crystal Systems</h2>
        <p class="mt-4 text-lg text-slate-600 max-w-2xl mx-auto">
          Comprehensive coverage of all crystal systems with accurate symmetry operations.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
        {crystalSystems.map((system) => (
          <div class="bg-slate-50 rounded-xl p-5 border border-slate-100 hover:border-crystal-200 hover:bg-crystal-50/50 transition-colors">
            <h3 class="font-semibold text-slate-900">{system.name}</h3>
            <p class="mt-1 text-sm text-slate-500">{system.examples}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-to-br from-crystal-600 to-crystal-800">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white">Ready to visualize crystals?</h2>
      <p class="mt-4 text-lg text-crystal-100 max-w-2xl mx-auto">
        Start with the interactive playground or explore our gallery of 50+ mineral presets.
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <a href="/playground" class="inline-flex items-center gap-2 px-6 py-3 bg-white text-crystal-700 font-medium rounded-lg hover:bg-crystal-50 transition-colors">
          Open Playground
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a href="https://github.com/gemmology-dev" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 bg-crystal-700 text-white font-medium rounded-lg hover:bg-crystal-600 transition-colors border border-crystal-500">
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.477 2 12c0 4.42 2.865 8.17 6.839 9.49.5.092.682-.217.682-.482 0-.237-.008-.866-.013-1.7-2.782.604-3.369-1.34-3.369-1.34-.454-1.156-1.11-1.464-1.11-1.464-.908-.62.069-.608.069-.608 1.003.07 1.531 1.03 1.531 1.03.892 1.529 2.341 1.087 2.91.831.092-.646.35-1.086.636-1.336-2.22-.253-4.555-1.11-4.555-4.943 0-1.091.39-1.984 1.029-2.683-.103-.253-.446-1.27.098-2.647 0 0 .84-.269 2.75 1.025A9.578 9.578 0 0112 6.836c.85.004 1.705.114 2.504.336 1.909-1.294 2.747-1.025 2.747-1.025.546 1.377.203 2.394.1 2.647.64.699 1.028 1.592 1.028 2.683 0 3.842-2.339 4.687-4.566 4.935.359.309.678.919.678 1.852 0 1.336-.012 2.415-.012 2.743 0 .267.18.578.688.48C19.138 20.167 22 16.418 22 12c0-5.523-4.477-10-10-10z" clip-rule="evenodd"/>
          </svg>
          View on GitHub
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
