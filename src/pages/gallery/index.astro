---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Gallery } from '../../components/gallery/Gallery';
import { Container, SectionHeader } from '../../components/ui-astro';

const url = Astro.url;
const initialSystem = url.searchParams.get('system') || '';
const initialSearch = url.searchParams.get('search') || '';
---

<BaseLayout
  title="Crystal Gallery"
  description="Explore 50+ mineral presets with FGA-accurate crystallographic data and interactive visualizations."
>
  <div class="bg-gradient-to-b from-crystal-50 to-white">
    <Container size="xl" padding="md">
      <SectionHeader
        title="Crystal Gallery"
        description="Explore our collection of 50+ mineral presets with FGA-accurate crystallographic data. Click any crystal to view detailed properties and open in the playground."
      />

      <Gallery
        client:load
        initialSystem={initialSystem}
        initialSearch={initialSearch}
      />
    </Container>
  </div>
</BaseLayout>
