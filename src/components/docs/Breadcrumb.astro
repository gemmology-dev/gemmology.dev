---
interface BreadcrumbItem {
  label: string;
  href?: string;
}

interface Props {
  items: BreadcrumbItem[];
}

const { items } = Astro.props;
---

<nav class="breadcrumb" aria-label="Breadcrumb">
  <ol>
    {items.map((item, i) => (
      <>
        {i > 0 && <li class="separator" aria-hidden="true">/</li>}
        <li>
          {item.href ? (
            <a href={item.href}>{item.label}</a>
          ) : (
            <span class="current">{item.label}</span>
          )}
        </li>
      </>
    ))}
  </ol>
</nav>

<style>
  .breadcrumb {
    @apply mb-8;
  }

  .breadcrumb ol {
    @apply flex items-center gap-2 text-sm;
  }

  .breadcrumb a {
    @apply text-slate-600 hover:text-crystal-600 transition-colors;
    @apply focus-visible:outline-2 focus-visible:outline-crystal-500 focus-visible:outline-offset-2 focus-visible:rounded;
  }

  .breadcrumb .separator {
    @apply text-slate-300;
  }

  .breadcrumb .current {
    @apply text-slate-900 font-medium;
  }
</style>
