---
interface Props {
  name: string;
  signature: string;
  anchor?: string;
}

const { name, signature, anchor = name } = Astro.props;
---

<div class="api-signature" id={anchor}>
  <a href={`#${anchor}`} class="anchor-link" aria-label="Link to this section">#</a>
  <code class="signature-code">{signature}</code>
</div>

<style>
  .api-signature {
    @apply relative flex items-center gap-3 my-6 p-4 rounded-lg;
    @apply bg-gradient-to-r from-slate-50 to-slate-100;
    @apply border border-slate-200;
  }

  .anchor-link {
    @apply text-slate-500 hover:text-crystal-600 transition-colors;
    @apply text-lg font-mono;
    @apply focus-visible:outline-2 focus-visible:outline-crystal-500 focus-visible:outline-offset-2 focus-visible:rounded;
  }

  .signature-code {
    @apply text-base font-mono text-slate-800;
    @apply bg-transparent !p-0;
  }
</style>
