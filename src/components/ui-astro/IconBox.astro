---
/**
 * IconBox - Astro version of the React IconBox component
 * Styled container for icons with color variants.
 */

type IconBoxSize = 'sm' | 'md' | 'lg';
type IconBoxVariant = 'crystal' | 'ruby' | 'sapphire' | 'emerald' | 'amethyst' | 'slate';

interface Props {
  size?: IconBoxSize;
  variant?: IconBoxVariant;
  class?: string;
}

const { size = 'md', variant = 'crystal', class: className } = Astro.props;

const sizeStyles: Record<IconBoxSize, string> = {
  sm: 'w-8 h-8',
  md: 'w-12 h-12',
  lg: 'w-16 h-16',
};

const variantStyles: Record<IconBoxVariant, string> = {
  crystal: 'bg-crystal-100 text-crystal-600',
  ruby: 'bg-red-100 text-red-600',
  sapphire: 'bg-blue-100 text-blue-600',
  emerald: 'bg-green-100 text-green-600',
  amethyst: 'bg-purple-100 text-purple-600',
  slate: 'bg-slate-100 text-slate-600',
};

const classes = [
  'flex items-center justify-center rounded-lg transition-transform',
  sizeStyles[size],
  variantStyles[variant],
  className,
].filter(Boolean).join(' ');
---

<div class={classes}>
  <slot />
</div>
