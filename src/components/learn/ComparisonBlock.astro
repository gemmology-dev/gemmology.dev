---
interface ComparisonItem {
  title: string;
  points: string[];
  variant?: 'default' | 'success' | 'warning' | 'danger';
}

interface Props {
  items: ComparisonItem[];
}

const { items } = Astro.props;

const variantClasses = {
  default: 'bg-slate-50 border-slate-200 dark:bg-slate-800 dark:border-slate-700',
  success: 'bg-emerald-50 border-emerald-200 dark:bg-emerald-900/20 dark:border-emerald-700',
  warning: 'bg-amber-50 border-amber-200 dark:bg-amber-900/20 dark:border-amber-700',
  danger: 'bg-red-50 border-red-200 dark:bg-red-900/20 dark:border-red-700',
};

const titleClasses = {
  default: 'text-slate-900 dark:text-slate-100',
  success: 'text-emerald-900 dark:text-emerald-100',
  warning: 'text-amber-900 dark:text-amber-100',
  danger: 'text-red-900 dark:text-red-100',
};

const textClasses = {
  default: 'text-slate-600 dark:text-slate-400',
  success: 'text-emerald-800 dark:text-emerald-200',
  warning: 'text-amber-800 dark:text-amber-200',
  danger: 'text-red-800 dark:text-red-200',
};
---

<div class={`grid gap-6 my-8 ${items.length === 2 ? 'sm:grid-cols-2' : items.length === 3 ? 'sm:grid-cols-3' : 'sm:grid-cols-2 lg:grid-cols-4'}`}>
  {items.map(item => {
    const variant = item.variant || 'default';
    return (
      <div class={`p-6 rounded-xl border ${variantClasses[variant]}`}>
        <h4 class={`font-semibold ${titleClasses[variant]}`}>{item.title}</h4>
        <ul class={`mt-3 space-y-2 text-sm ${textClasses[variant]}`}>
          {item.points.map(point => (
            <li>{point}</li>
          ))}
        </ul>
      </div>
    );
  })}
</div>
